<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:paddingRight="@android:dimen/app_icon_size"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="match_parent">
		<TextView
			android:id="@+id/name"
			android:textAppearance="?android:textAppearanceLarge"
			android:drawablePadding="@dimen/abc_button_padding_horizontal_material"
			android:gravity="center_vertical"
			android:lines="2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<FrameLayout
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/pass"
				android:background="@drawable/background"
				android:inputType="textPassword"
				android:textAppearance="?android:textAppearanceMedium"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="@android:dimen/app_icon_size"/>
		</FrameLayout>
	</LinearLayout>
	<FrameLayout
		android:id="@+id/pad"
		android:background="@drawable/background"
		android:paddingTop="@android:dimen/app_icon_size"
		android:paddingBottom="@android:dimen/app_icon_size"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="match_parent"/>
</LinearLayout>